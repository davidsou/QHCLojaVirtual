@model IEnumerable<QHC.LojaVirtual.Dominio.Entidades.Produto>

@{ViewBag.Title = "Administrativo - Produtos";
Layout = "~/Areas/Administrativo/Views/Shared/_AdministrativoLayout.cshtml";
}

<div class="alert alert-success" id="mensagem"></div>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>QHC Loja Virtual - Administrativo - Produtos</h3>
    </div>

    <div class="panel-body">
        @Html.ActionLink("Novo Produto", "NovoProduto", "Produto", new { @class = "btn btn-default" })

        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th class="text-right">#Id</th>
                    <th>Nome</th>
                    <th class="text-right">Preço</th>
                    <th class="text-center">Excluir</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr id="row-@item.ProdutoId">
                        <td class="text-right">
                            #@item.ProdutoId
                        </td>
                        <td>
                            @Html.ActionLink(item.Nome, "Alterar", new { item.ProdutoId })
                        </td>
                        <td class="text-right">
                            @item.Preco.ToString("c")
                        </td>
                        <td class="text-center">
                            @using (Html.BeginForm("Excluir", "Produto"))
                            {
                                @Html.Hidden("ProdutoId", item.ProdutoId)
                                <input type="submit" class="btn btn-default btn-xs" value="Excluir" />

                            }
                        </td>
                    </tr>

                }

            </tbody>

        </table>


    </div>



</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Preco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProdutoId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProdutoId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProdutoId })
            </td>
        </tr>
    }

</table>
