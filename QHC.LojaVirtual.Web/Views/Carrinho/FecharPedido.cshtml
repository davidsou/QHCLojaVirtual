@model QHC.LojaVirtual.Dominio.Entidades.Pedido

@{
    ViewBag.Title = "QHC Fechar o Pedido";
}

<h2>Fechar Pedido</h2>
<p>Digite suas Informações abaixo</p>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <h3>Enviar para</h3>

    <div class="form-group">
        <label>Nome do cliente:</label>
        @Html.TextBoxFor(x => x.NomePedido, new { @class = "form-control" })
    </div>

    <h3>Dados para entrega</h3>

    <div class="form-group">
        <label>Cep:</label>
        @Html.TextBoxFor(x => x.Cep, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Endereço:</label>
        @Html.TextBoxFor(x => x.Endereco, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Complemento:</label>
        @Html.TextBoxFor(x => x.Complemento, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Cidade:</label>
        @Html.TextBoxFor(x => x.Cidade, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Bairro:</label>
        @Html.TextBoxFor(x => x.Bairro, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Email:</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>

    <h3>Opções</h3>
    <div class="checkbox">
        <label>
            @Html.EditorFor(x => x.EmbrulharPresente)
            Embrulhar para presente?
        </label>
    </div>
    <input class="btn btn-primary" type="submit" name="btnSubmit" value="Fechar o pedido " />
}
