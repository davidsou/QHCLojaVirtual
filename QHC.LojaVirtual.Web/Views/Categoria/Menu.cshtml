@model System.Collections.Generic.IEnumerable<string>

@Html.ActionLink("Todos os produtos", "ListaProdutos", "Vitrine", null, new { @class = "btn-block btn-default btn-lg" })
@foreach (var link in Model)
{
   @Html.RouteLink(link, new
    {
        controler = "Vitrine",
        action = "ListaProdutos",
        categoria = link,
        pagina = 1
    }, new
    {
        @class = "btn-block btn-default btn-lg"
        + (link == ViewBag.CategoriaSelecionada ? " btn-primary" : "")
    });
}
